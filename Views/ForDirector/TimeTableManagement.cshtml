                            });
                        },
                        error: function (data) {
                            alert("xxx");
                        }
                    });
                }
                else {
                    $.ajax({
                        url: '@Url.Action("getClasses", "ForDirector")',
                        method: 'post',
                        data: JSON.stringify({
                            "id": x,
                            "level": l
                        }),
                        dataType: 'json',
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            classes.empty();
