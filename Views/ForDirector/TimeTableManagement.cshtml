            error: function (data) {

            }
        });

        subjectList.change(function () {

            subjectId = subjectList.val();
            $.ajax({
                url: '@Url.Action("getTeachers", "ForDirector")',
                method: 'post',
                data: JSON.stringify({
                    "subjectId": subjectId
