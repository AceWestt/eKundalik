@model eDnevnik.Models.LogOnModel

@{
    ViewBag.Title = "Вход";
}

<div id="topLineLogin">
    <div class="schoolName">
        <img src="~/image/icons/lenta/lenta.png" />
        <p>Школа №000</p>
    </div>    
</div>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="loginForm"> 
        <div class="loginLabel">Вход</div>       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="loginTextLabel">Логин:</div>
        <div class="loginTextBox">           
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })            
        </div>
        <div class="loginTextLabel">Пароль:</div>
        <div class="loginTextBox">           
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })           
        </div>       
            <div class="loginButton">
                <input type="submit" value="Войти"/>
            </div>
       
    </div>
}


